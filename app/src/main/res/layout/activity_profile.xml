<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/calorieBurnInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Daily Calorie Burn"
            android:inputType="number"
            android:padding="10dp" />

        <Button
            android:id="@+id/addCalorieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Calorie Burn"
            android:backgroundTint="#87ceeb"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/calculateAverageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Average"
            android:backgroundTint="#87ceeb"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/analyzeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analyze Calorie Burn"
            android:backgroundTint="#87ceeb"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/startDateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Start Date"
            android:backgroundTint="#87ceeb"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/endDateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select End Date"
            android:textStyle="bold"
            android:backgroundTint="#87ceeb"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results will be displayed here"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="16sp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>

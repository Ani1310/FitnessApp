<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bmiCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Category: "
            android:textColor="#87ceeb"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/dietImage"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/dietRecommendationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Recommendation: "
            android:textColor="#87ceeb"
            android:textStyle="bold"

            android:layout_marginBottom="20dp" />

        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="10dp" />/>

        <TextView
            android:id="@+id/exerciseRecommendationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#87ceeb"
            android:text="Exercise Recommendation: " />
    </LinearLayout>
</ScrollView>
